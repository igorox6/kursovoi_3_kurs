<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursovoi.controllers.CartController">
    <!-- Верхняя часть: заголовок и кнопка "назад" -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <children>
                <Button fx:id="backButton" onAction="#goBack" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Назад" style="-fx-font-size: 14;" />
                        </HBox>
                    </graphic>
                </Button>
                <Label text="Корзина" style="-fx-font-weight: bold; -fx-font-size: 16;" />
            </children>
        </HBox>
    </top>

    <!-- Центральная часть: список товаров в корзине -->
    <center>
        <ScrollPane fx:id="cartScrollPane" style="-fx-background: white;">
            <content>
                <VBox fx:id="cartItemsContainer" spacing="10.0" style="-fx-padding: 20;" />
            </content>
        </ScrollPane>
    </center>

    <!-- Панель с итоговой суммой и кнопкой "Оформить" -->
    <bottom>
        <VBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                <children>
                    <Label fx:id="totalSumLabel" text="Итого: 0 руб." style="-fx-font-size: 16; -fx-font-weight: bold;" />
                    <Button fx:id="payButton" text="Оформить" onAction="#handlePayment" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;" />
                </children>
            </HBox>
            <!-- Нижняя панель кнопок -->
            <HBox spacing="50.0" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                </padding>
                <children>
                    <VBox alignment="CENTER" spacing="5">
                        <children>
                            <ImageView fx:id="iconUser" fitHeight="24.0" fitWidth="24.0" />
                            <Button fx:id="profileButton" text="Имя" onAction="#onProfileClick" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                        </children>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <children>
                            <ImageView fx:id="iconOrders" fitHeight="24.0" fitWidth="24.0" />
                            <Button fx:id="ordersButton" text="Заказы" onAction="#onOrdersClick" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                        </children>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <children>
                            <ImageView fx:id="iconBasket" fitHeight="24.0" fitWidth="24.0" />
                            <Button fx:id="basketButton" text="Корзина" onAction="#onBasketClick" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>