<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #e0e7ff, #f7f9ff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursovoi.controllers.OrdersSellerController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button fx:id="menuButton" text="Назад" onAction="#onMenuClick" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Label text="Фильтрация заказов:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <Label text="Дата (гггг.мм.дд):" style="-fx-font-size: 12px;" />
            <TextField fx:id="startDateField" promptText="От" style="-fx-max-width: 100; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <Label text="-" style="-fx-font-size: 12px;" />
            <TextField fx:id="endDateField" promptText="До" style="-fx-max-width: 100; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <Label text="Сумма:" style="-fx-font-size: 12px;" />
            <TextField fx:id="minSumField" promptText="Мин" style="-fx-max-width: 80; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <Label text="-" style="-fx-font-size: 12px;" />
            <TextField fx:id="maxSumField" promptText="Макс" style="-fx-max-width: 80; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <Label text="Оплата:" style="-fx-font-size: 12px;" />
            <ComboBox fx:id="paymentFilter" style="-fx-max-width: 120; -fx-background-radius: 5; -fx-border-radius: 5;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Все" />
                        <String fx:value="Оплачено" />
                        <String fx:value="Не оплачено" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
                    <VBox fx:id="ordersList" spacing="15" alignment="TOP_CENTER" />
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="50.0" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconOrders" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="ordersButton" text="Заказы" onAction="#onOrdersClick" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconBasket" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="basketButton" text="Заказ" onAction="#onBasketClick" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
    <ImageView fx:id="penIcon" visible="false" managed="false" />
</BorderPane>