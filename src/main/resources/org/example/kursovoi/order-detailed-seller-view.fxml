<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #e0e7ff, #f7f9ff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursovoi.controllers.OrderDetailedSellerController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button fx:id="backButton" text="Назад" onAction="#goBack" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Label fx:id="orderInfoLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        </HBox>
    </top>
    <center>
        <AnchorPane>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="50">
                <content>
                    <VBox fx:id="productsList" spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;" />
                </content>
            </ScrollPane>
            <Button fx:id="payButton" text="Оформить" onAction="#handlePayment" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-cursor: hand;" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
        </AnchorPane>
    </center>
    <bottom>
        <HBox spacing="50.0" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconOrders" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="ordersButton" text="Заказы" onAction="#goBack" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconBasket" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="basketButton" text="Заказ" onAction="#goBack" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
    <ImageView fx:id="penIcon" visible="false" managed="false" />
</BorderPane>