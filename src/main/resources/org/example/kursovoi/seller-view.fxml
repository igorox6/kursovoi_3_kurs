<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kursovoi.controllers.SellerController">
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <Label text="Фильтрация" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Каталог" style="-fx-font-weight: bold;"/>
                        <HBox fx:id="categoryFilterBox" visible="false" managed="false" style="-fx-background-color: green; -fx-background-radius: 5; -fx-padding: 2 5 2 5;">
                            <children>
                                <Label fx:id="selectedCategoryLabel" style="-fx-text-fill: white;"/>
                                <Button fx:id="clearCategoryFilter" text="✖" onAction="#clearCategoryFilter" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 0 5 0 5;"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <TreeView fx:id="catalogTreeView" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Label text="Цена" style="-fx-font-weight: bold;"/>
                <HBox spacing="5.0">
                    <children>
                        <TextField fx:id="minPriceField" promptText="Мин" style="-fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5;"/>
                        <Label text="-" />
                        <TextField fx:id="maxPriceField" promptText="Макс" style="-fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5;"/>
                    </children>
                </HBox>
                <Label text="Бренд" style="-fx-font-weight: bold;"/>
                <VBox fx:id="brandsBox" spacing="5.0">
                    <children>
                        <CheckBox text="бренд1" fx:id="brand1CheckBox"/>
                        <CheckBox text="бренд2" fx:id="brand2CheckBox"/>
                        <CheckBox text="бренд3" fx:id="brand3CheckBox"/>
                    </children>
                </VBox>
                <Label text="Поиск по названию" style="-fx-font-weight: bold;"/>
                <TextField fx:id="searchField" style="-fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5;"/>
                <Label text="Сортировка" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="sortComboBox" style="-fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="А-Я" />
                            <String fx:value="Я-А" />
                            <String fx:value="Цена по возрастанию" />
                            <String fx:value="Цена по убыванию" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </VBox>
    </left>
    <center>
        <ScrollPane fx:id="productsScrollPane" style="-fx-background: white;">
            <content>
                <Label text="Здесь будут отображаться товары" style="-fx-font-size: 16; -fx-padding: 20;"/>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="50.0" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconOrders" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="ordersButton" text="Заказы" onAction="#onOrdersClick" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="iconBasket" fitHeight="24.0" fitWidth="24.0" />
                        <Button fx:id="basketButton" text="Заказ" onAction="#onBasketClick" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>